package GUI.project;
import javafx.application.Application;
import java.util.ArrayList;
import java.util.List;

import javafx.stage.Stage;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.layout.*;
import javafx.scene.control.*;
import javafx.geometry.*;
import javafx.scene.text.*;


public class GUImain {
	
	public void start(Stage primaryStage,List<Score> list) {
		try {
			BorderPane root = new BorderPane();
			
			
			ListView listView = new ListView();
			
			for(int i = 0;i<list.size();i++) {
				listView.getItems().add(list.get(i).getRawScore());

			}
			
			Text t = new Text();
			
			t.setFont(new Font(30));
			t.setText("Grade Analyzer Prototype");
			
			Button bt1 = new Button("Statistics");
			Button bt5 = new Button("Add");
			bt5.setOnAction(e->{
				Stage newStage = new Stage();
				addGradePopUp gragePop = new addGradePopUp(newStage, "Enter grade",list); 
			});
			Button bt6 = new Button("Delete");
			Button bt7 = new Button("Save");
			Button bt8 = new Button("Exit");
			
			GridPane gp = new GridPane();
			gp.add(bt1, 0, 0);
			gp.add(bt5, 0, 2);
			gp.add(bt6, 1, 2);
			gp.add(bt7, 0, 3);
			gp.add(bt8, 1, 3);
			
			gp.setPadding(new Insets(20, 12, 15, 20));
			gp.setVgap(10.0);
			
			root.setLeft(gp);
			root.setRight(listView);
			root.setTop(t);
			
			Scene scene = new Scene(root,400,400);
			primaryStage.setWidth(700);
			primaryStage.setHeight(700);
			//scene.getStylesheets().add(getClass().getResource("application.css").toExternalForm());
			primaryStage.setTitle("Grade Analyzer");
			primaryStage.setScene(scene);
	        primaryStage.setMinWidth(primaryStage.getWidth());
	        primaryStage.setMinHeight(primaryStage.getHeight());
			primaryStage.show();
		} catch(Exception e) {
			e.printStackTrace();
		}
	}
}
